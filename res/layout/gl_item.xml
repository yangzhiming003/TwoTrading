<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/gl_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/gl_item_tv_name_height"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/gl_item_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/gl_item_tv_name_height"
        android:layout_below="@id/gl_item_tv_name"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="TextView" />

    <ImageView
        android:id="@+id/gl_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gl_item_tv_description"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>